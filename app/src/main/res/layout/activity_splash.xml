<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:src="@drawable/vault_logo"/>

    <TextView
        android:id="@+id/logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_below="@+id/logo_img"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="@dimen/_minus5sdp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_50sdp"
        android:text="@string/keep_your_memories_away_from_volatile"
        android:layout_below="@+id/logo_txt"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:alpha="0.5"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:rotation="325"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:alpha="0.75"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:rotation="45"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        android:alpha="0.45"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:rotation="45"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:alpha="0.65"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:rotation="45"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:alpha="0.15"/>

</RelativeLayout>